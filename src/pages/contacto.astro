---
import Layout from "../layouts/Layout.astro";
import "../styles/contacto.css";
---

<Layout title="Contacto | Oriol Giner">
  <main class="bg-navy-900 min-h-screen text-white">

    <div class="container mx-auto px-4 py-16">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-5xl font-bold mb-8 text-center contact-title">
          Contacta <span class="text-blue-400">Conmigo</span>
        </h1>
        
        <div class="contact-container">
          <div class="contact-card">
            <div class="contact-card-inner">
              <div class="contact-card-front">
                <div class="contact-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <h3 class="text-xl font-bold mb-2">Email</h3>
                <p class="text-navy-100">Envíame un correo electrónico</p>
              </div>
              <div class="contact-card-back">
                <a href="mailto:oriolginger2008@gmail.com" class="text-blue-300 hover:text-blue-200 text-lg font-medium">
                  oriolginger2008@gmail.com
                </a>
              </div>
            </div>
          </div>
          
          <div class="contact-card">
            <div class="contact-card-inner">
              <div class="contact-card-front">
                <div class="contact-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <h3 class="text-xl font-bold mb-2">Teléfono</h3>
                <p class="text-navy-100">Llámame o escríbeme por WhatsApp</p>
              </div>
              <div class="contact-card-back">
                <a href="tel:+34644881520" class="text-blue-300 hover:text-blue-200 text-lg font-medium">
                  +34 644 881 520
                </a>
                <div class="flex mt-4 space-x-4">
                  <a href="https://wa.me/34644881520" target="_blank" rel="noopener noreferrer" class="text-green-400 hover:text-green-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
          
          <div class="contact-card">
            <div class="contact-card-inner">
              <div class="contact-card-front">
                <div class="contact-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </div>
                <h3 class="text-xl font-bold mb-2">LinkedIn</h3>
                <p class="text-navy-100">Conéctate conmigo profesionalmente</p>
              </div>
              <div class="contact-card-back">
                <a href="https://www.linkedin.com/in/oriol-giner/" target="_blank" rel="noopener noreferrer" class="text-blue-300 hover:text-blue-200 text-lg font-medium">
                  linkedin.com/in/oriol-giner
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <div class="mt-20 text-center">
          <div class="compass-container">
            <div class="compass">
              <div class="compass-inner">
                <div class="compass-arrow"></div>
              </div>
            </div>
          </div>
          <p class="text-xl text-navy-100 mt-8 max-w-2xl mx-auto contact-message">
            Estoy listo para ayudarte a navegar hacia el éxito de tu próximo proyecto. 
            <span class="text-blue-400">¡Contáctame y empecemos a trabajar juntos!</span>
          </p>
        </div>
      </div>
    </div>
  </main>
<style>
  .compass-arrow {
    transform: translateY(-50%);
  }
  
</style>
  <script>
    // Animaciones con GSAP
    import { gsap } from "gsap";
    
    document.addEventListener('DOMContentLoaded', () => {
      // Animación del título
      gsap.from(".contact-title", {
        y: -50,
        opacity: 0,
        duration: 1,
        ease: "power3.out"
      });
      
      // Animación de las tarjetas de contacto
      gsap.from(".contact-card", {
        y: 50,
        opacity: 0,
        duration: 0.8,
        stagger: 0.2,
        ease: "back.out(1.7)"
      });
      
      // Animación de la brújula
      gsap.from(".compass-container", {
        scale: 0,
        opacity: 0,
        duration: 1.2,
        delay: 0.8,
        ease: "elastic.out(1, 0.5)"
      });
      
      // Animación de la flecha de la brújula
      gsap.to(".compass-arrow", {
        rotation: 720,
        duration: 3,
        delay: 1,
        ease: "power2.inOut"
      });
      
      // Animación del mensaje final
      gsap.from(".contact-message", {
        y: 30,
        opacity: 0,
        duration: 1,
        delay: 1.5,
        ease: "power2.out"
      });
      
      // Efecto de hover para las tarjetas
      const cards = document.querySelectorAll('.contact-card');
      cards.forEach(card => {
        card.addEventListener('mouseenter', () => {
          const inner = card.querySelector('.contact-card-inner');
          gsap.to(inner, {
            rotationY: 180,
            duration: 0.6,
            ease: "power1.inOut"
          });
        });
        
        card.addEventListener('mouseleave', () => {
          const inner = card.querySelector('.contact-card-inner');
          gsap.to(inner, {
            rotationY: 0,
            duration: 0.6,
            ease: "power1.inOut"
          });
        });
      });
    });
  </script>
</Layout>